@model Personal_Finance_Manager.Models.Transaction
@{
    ViewData["Title"] = "Delete Transaction";
}
<div class="container mt-4">
    <h2 class="text-danger text-center">Confirm Delete</h2>
    <div class="border p-4 bg-light rounded">
        <h4>Are you sure you want to delete this transaction?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">@Model.Notes</dd>
        </dl>
        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="TransactionId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>