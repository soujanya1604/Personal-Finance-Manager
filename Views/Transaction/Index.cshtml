@model IEnumerable<Personal_Finance_Manager.Models.Transaction>
@{
    ViewData["Title"] = "Transactions";
}
<div class="container mt-4">
    <h2 class="mb-4 text-center">Your Transactions</h2>
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success shadow-sm">➕ Add Transaction</a>
    </div>
    <table class="table table-hover shadow-sm rounded">
        <thead class="table-light">
            <tr>
                <th>Category</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Category</td>
                    <td>@item.Type</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.Date?.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TransactionId" class="btn btn-outline-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.TransactionId" class="btn btn-outline-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.TransactionId" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>